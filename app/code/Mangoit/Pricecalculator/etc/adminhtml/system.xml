</field>
</group>
</section>

<section id="calc_value" translate="label" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
    <label>Calculator value</label>
<tab>calc_value</tab>
<!-- resource tag name which we have to defined in the acl.xml -->
<resource>Mangoit_CustomQuote::mangoit_customquote</resource>
<group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
