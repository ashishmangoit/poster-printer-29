<field id="value" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
    <label>Calculation Value</label>
</field>
</group>
</section>

<tab id="quote" translate="label" sortOrder="300">
    <label>Quote</label>
</tab>

