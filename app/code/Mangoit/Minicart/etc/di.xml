<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\Checkout\CustomerData\AbstractItem">
        <plugin name="minicart-product-attribute" type="Mangoit\Minicart\Plugin\Checkout\CustomerData\DefaultItem" />
    </type>
     <!-- Set Custom attribute in chekcout page summary block -->   
      <type name="Magento\Checkout\Model\DefaultConfigProvider">
        <plugin name="chekcout-summary-product-attribute" type="Mangoit\Minicart\Plugin\Checkout\Model\DefaultConfigProvider" />
    </type>
    <preference for="Magento\Checkout\Model\Cart\ImageProvider" type="Mangoit\Minicart\Model\Cart\ImageProvider" />
    <type name="Magento\Checkout\Block\Checkout\LayoutProcessor">
        <plugin name="checkout-address-attribute" type="Mangoit\Minicart\Plugin\Checkout\LayoutProcessor" />
    </type>
    <type name="Magento\Quote\Model\Quote\Address">
        <plugin name="chekcout-not-required" type="Mangoit\Minicart\Plugin\Checkout\Address" />
    </type>   
</config>